<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pract13" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/my_dark_primary_light</item>
        <item name="colorOnPrimary">@color/my_dark_primary</item>
        <item name="android:background">@color/my_dark_background</item>
        <item name="android:textColor">@color/my_dark_primary_light</item>
        <item name="colorOnBackground">@color/my_dark_primary_light</item>

        <!-- Кнопки -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/my_dark_primary_light</item>
        <item name="android:textColor">@color/my_dark_primary</item>
    </style>

    <style name="Theme.Pract13" parent="Base.Theme.Pract13" />
</resources>